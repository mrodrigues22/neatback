<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Slouti.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Slouti"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{StaticResource SurfaceBrush}">
    
    <Page.Resources>
        <!-- Fade In Animation -->
        <Storyboard x:Name="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="MainContent"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Posture Status Colors -->
        <SolidColorBrush x:Key="GoodPostureBrush" Color="#10B981"/>  <!-- Green -->
        <SolidColorBrush x:Key="WarningPostureBrush" Color="#F59E0B"/>  <!-- Amber/Yellow -->
        <SolidColorBrush x:Key="BadPostureBrush" Color="#EF4444"/>  <!-- Red -->
        <SolidColorBrush x:Key="NeutralPostureBrush" Color="#6B7280"/>  <!-- Gray -->
        
        <!-- Pulsing Animation for Bad Posture -->
        <Storyboard x:Name="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="CameraBorder"
                           Storyboard.TargetProperty="Opacity"
                           From="1.0" To="0.6" Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Status Icon Rotation Animation -->
        <Storyboard x:Name="SpinAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="StatusIconRotate"
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360" Duration="0:0:2" />
        </Storyboard>
        
        <!-- Gradient Slider Style -->
        <Style x:Key="GradientSliderStyle" TargetType="Slider">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Color="#E5E7EB" Offset="0" />
                        <GradientStop Color="#D1D5DB" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Color="#6366F1" Offset="0" />
                        <GradientStop Color="#8B5CF6" Offset="0.5" />
                        <GradientStop Color="#EC4899" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    <Page.Content>
        <Grid x:Name="MainContent" Padding="24,16" Opacity="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!-- Compact Header -->
            <Border Grid.Row="0" 
                    CornerRadius="16" 
                    Background="{StaticResource PrimaryGradient}"
                    Padding="20,12"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <Image Source="ms-appx:///Assets/app-logo.png" Width="70" Height="70" Stretch="Uniform" />
                        <TextBlock Text="AI Posture Guardian" FontSize="14" Foreground="White" Opacity="0.8" VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <Button x:Name="StartButton"
                            Grid.Column="2"
                            Content="â–¶ Start"
                            Click="StartButton_Click"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Background="#10B981"
                            Foreground="White"
                            CornerRadius="8"
                            FontWeight="SemiBold" />
                    
                    <Button x:Name="SavePostureButton"
                            Grid.Column="3"
                            Content="ðŸ’¾ Save Posture"
                            Click="SavePostureButton_Click"
                            IsEnabled="False"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="White"
                            BorderThickness="1"
                            CornerRadius="8"
                            FontWeight="SemiBold" />
                    
                    <Button x:Name="MuteButton"
                            Grid.Column="4"
                            Content="ðŸ””"
                            Click="MuteButton_Click"
                            Padding="16,8"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="White"
                            BorderThickness="1"
                            CornerRadius="8"
                            FontWeight="SemiBold"
                            ToolTipService.ToolTip="Mute notifications" />
                </Grid>
            </Border>
            
            <!-- Main Two-Column Layout -->
            <Grid Grid.Row="1" ColumnSpacing="16" RowSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="400" />
                    <ColumnDefinition Width="380" />
                </Grid.ColumnDefinitions>
                
                <!-- Left Column: Camera + Privacy + Status -->
                <Grid Grid.Column="0" RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <!-- Camera Feed -->
                    <Border Grid.Row="0"
                            CornerRadius="16"
                            Background="{StaticResource CardSurfaceBrush}"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                                <FontIcon Glyph="&#xE714;" FontSize="18" Foreground="{StaticResource PrimaryBrush}" />
                                <TextBlock Text="Live Camera Feed" FontSize="16" FontWeight="SemiBold" Foreground="#1F2937" />
                            </StackPanel>
                            
                            <Border x:Name="CameraBorder"
                                    Grid.Row="1"
                                    BorderBrush="{StaticResource NeutralPostureBrush}"
                                    BorderThickness="3"
                                    CornerRadius="12"
                                    Background="#000000">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <Grid>
                                    <Image x:Name="CameraPreview" Stretch="Uniform" />
                                    
                                    <!-- Loading Spinner Overlay -->
                                    <Grid x:Name="LoadingOverlay" Visibility="Collapsed" Background="#90000000">
                                        <Grid.Shadow>
                                            <ThemeShadow />
                                        </Grid.Shadow>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                                            <ProgressRing Width="64" 
                                                         Height="64" 
                                                         IsActive="True"
                                                         Foreground="{StaticResource PrimaryBrush}" />
                                            <TextBlock Text="Starting camera..." 
                                                      FontSize="16" 
                                                      FontWeight="SemiBold"
                                                      Foreground="White" 
                                                      HorizontalAlignment="Center" 
                                                      Opacity="0.95" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Privacy Disclaimer -->
                    <Border Grid.Row="1"
                            CornerRadius="12"
                            Background="#ECFDF5"
                            BorderBrush="#10B981"
                            BorderThickness="1"
                            Padding="12,8"
                            Margin="0,0,0,8">
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" Glyph="&#xE72E;" FontSize="16" Foreground="#059669" VerticalAlignment="Top" Margin="0,2,0,0" />
                            <TextBlock Grid.Column="1"
                                      Text="ðŸ”’ Privacy: All processing happens locally on your device. Your images are never sent to external servers or third parties."
                                      FontSize="12"
                                      Foreground="#065F46"
                                      TextWrapping="Wrap"
                                      VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    
                    <!-- Status Bar -->
                    <Border Grid.Row="2"
                            CornerRadius="12"
                            Background="{StaticResource CardSurfaceBrush}"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            Padding="16,12">
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <FontIcon x:Name="StatusIcon" Glyph="&#xE8F4;" FontSize="16" Foreground="{StaticResource PrimaryBrush}">
                                    <FontIcon.RenderTransform>
                                        <RotateTransform x:Name="StatusIconRotate" CenterX="8" CenterY="8" />
                                    </FontIcon.RenderTransform>
                                </FontIcon>
                                <TextBlock Text="Status:" FontWeight="SemiBold" Foreground="#374151" VerticalAlignment="Center" />
                            </StackPanel>
                            
                            <TextBlock Grid.Column="1"
                                       x:Name="StatusText"
                                       Text="Not monitoring"
                                       FontSize="14"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"
                                       Foreground="#6B7280"
                                       VerticalAlignment="Center" />
                            
                            <ProgressBar Grid.Column="2"
                                         x:Name="BadPostureProgress"
                                         Maximum="30"
                                         Value="0"
                                         Width="120"
                                         Height="6"
                                         CornerRadius="3"
                                         Foreground="{StaticResource WarningBrush}"
                                         Visibility="Collapsed" />
                        </Grid>
                    </Border>
                </Grid>
                
                <!-- Right Column: Metrics + Settings -->
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12">
                        
                        <!-- Posture Metrics - Compact Grid -->
                        <Border CornerRadius="14"
                                Background="{StaticResource CardSurfaceBrush}"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                Padding="16">
                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE9D9;" FontSize="16" Foreground="{StaticResource PrimaryBrush}" />
                                    <TextBlock Text="Posture Metrics" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937" />
                                </StackPanel>
                                
                                <Grid RowSpacing="8" ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Head Pitch -->
                                    <Border x:Name="PitchCard" Grid.Row="0" Grid.Column="0" Background="#EEF2FF" CornerRadius="10" Padding="10">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="2" HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸ“ Pitch" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Center" />
                                            <TextBlock x:Name="PitchText" Text="--Â°" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Head Roll -->
                                    <Border x:Name="RollCard" Grid.Row="0" Grid.Column="1" Background="#F0FDF4" CornerRadius="10" Padding="10">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="2" HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸ”„ Roll" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Center" />
                                            <TextBlock x:Name="RollText" Text="--Â°" FontSize="20" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Shoulder Tilt -->
                                    <Border x:Name="ShoulderCard" Grid.Row="0" Grid.Column="2" Background="#FEF3C7" CornerRadius="10" Padding="10">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="2" HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸ’ª Shoulder" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Center" />
                                            <TextBlock x:Name="ShoulderTiltText" Text="--Â°" FontSize="20" FontWeight="Bold" Foreground="{StaticResource WarningBrush}" HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Distance -->
                                    <Border x:Name="DistanceCard" Grid.Row="1" Grid.Column="0" Background="#DBEAFE" CornerRadius="10" Padding="10">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="2" HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸ“ Distance" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Center" />
                                            <TextBlock x:Name="DistanceText" Text="--" FontSize="20" FontWeight="Bold" Foreground="#3B82F6" HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Bad Duration -->
                                    <Border x:Name="BadDurationCard" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Background="#FEE2E2" CornerRadius="10" Padding="10">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="2" HorizontalAlignment="Center">
                                            <TextBlock Text="â±ï¸ Bad Posture Duration" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Center" />
                                            <TextBlock x:Name="BadDurationText" Text="0 s" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DangerBrush}" HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Sensitivity Settings -->
                        <Border CornerRadius="14"
                                Background="{StaticResource CardSurfaceBrush}"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                Padding="16">
                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE115;" FontSize="16" Foreground="{StaticResource PrimaryBrush}" />
                                    <TextBlock Text="Sensitivity Settings" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937" />
                                </StackPanel>
                                
                                <!-- Overall Sensitivity Slider (Simple Mode) -->
                                <StackPanel x:Name="SimpleSensitivityPanel" Spacing="8">
                                    <StackPanel Spacing="4">
                                        <Grid>
                                            <TextBlock Text="âš™ï¸ Overall Sensitivity" FontSize="13" FontWeight="Medium" Foreground="#374151" />
                                            <TextBlock x:Name="OverallSensitivityValue" Text="Medium" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource PrimaryBrush}" />
                                        </Grid>
                                        <Slider x:Name="OverallSensitivitySlider" Minimum="1" Maximum="5" Value="3" StepFrequency="0.01" ValueChanged="OverallSensitivitySlider_ValueChanged" Style="{StaticResource GradientSliderStyle}" />
                                        <Grid>
                                            <TextBlock Text="Low" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Left" />
                                            <TextBlock Text="High" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!-- Toggle to Advanced Settings -->
                                    <Button x:Name="ShowAdvancedButton"
                                            Content="âš™ï¸ Advanced Settings"
                                            Click="ShowAdvancedButton_Click"
                                            HorizontalAlignment="Center"
                                            Padding="12,6"
                                            Background="Transparent"
                                            Foreground="{StaticResource PrimaryBrush}"
                                            BorderBrush="{StaticResource PrimaryBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            FontSize="12"
                                            FontWeight="SemiBold" />
                                </StackPanel>
                                
                                <!-- Advanced Settings (Individual Sliders) -->
                                <StackPanel x:Name="AdvancedSensitivityPanel" Spacing="16" Visibility="Collapsed">
                                    <!-- Pitch Threshold -->
                                    <StackPanel Spacing="4">
                                        <Grid>
                                            <TextBlock Text="ðŸ“ Head Tilt Sensitivity" FontSize="13" FontWeight="Medium" Foreground="#374151" />
                                            <TextBlock x:Name="PitchThresholdValue" Text="Medium" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource PrimaryBrush}" />
                                        </Grid>
                                        <Slider x:Name="PitchThresholdSlider" Minimum="1" Maximum="5" Value="3" StepFrequency="0.01" ValueChanged="ThresholdSlider_ValueChanged" Style="{StaticResource GradientSliderStyle}" />
                                        <Grid>
                                            <TextBlock Text="Low" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Left" />
                                            <TextBlock Text="High" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!-- Distance Threshold -->
                                    <StackPanel Spacing="4">
                                        <Grid>
                                            <TextBlock Text="ðŸ“ Distance Sensitivity" FontSize="13" FontWeight="Medium" Foreground="#374151" />
                                            <TextBlock x:Name="DistanceThresholdValue" Text="Medium" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource PrimaryBrush}" />
                                        </Grid>
                                        <Slider x:Name="DistanceThresholdSlider" Minimum="1" Maximum="5" Value="3" StepFrequency="0.01" ValueChanged="ThresholdSlider_ValueChanged" Style="{StaticResource GradientSliderStyle}" />
                                        <Grid>
                                            <TextBlock Text="Low" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Left" />
                                            <TextBlock Text="High" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!-- Head Roll Threshold -->
                                    <StackPanel Spacing="4">
                                        <Grid>
                                            <TextBlock Text="ðŸ”„ Head Tilt Sideways Sensitivity" FontSize="13" FontWeight="Medium" Foreground="#374151" />
                                            <TextBlock x:Name="HeadRollThresholdValue" Text="Medium" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource PrimaryBrush}" />
                                        </Grid>
                                        <Slider x:Name="HeadRollThresholdSlider" Minimum="1" Maximum="5" Value="3" StepFrequency="0.01" ValueChanged="ThresholdSlider_ValueChanged" Style="{StaticResource GradientSliderStyle}" />
                                        <Grid>
                                            <TextBlock Text="Low" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Left" />
                                            <TextBlock Text="High" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!-- Shoulder Tilt Threshold -->
                                    <StackPanel Spacing="4">
                                        <Grid>
                                            <TextBlock Text="ðŸ’ª Shoulder Balance Sensitivity" FontSize="13" FontWeight="Medium" Foreground="#374151" />
                                            <TextBlock x:Name="ShoulderTiltThresholdValue" Text="Medium" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource PrimaryBrush}" />
                                        </Grid>
                                        <Slider x:Name="ShoulderTiltThresholdSlider" Minimum="1" Maximum="5" Value="3" StepFrequency="0.01" ValueChanged="ThresholdSlider_ValueChanged" Style="{StaticResource GradientSliderStyle}" />
                                        <Grid>
                                            <TextBlock Text="Low" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Left" />
                                            <TextBlock Text="High" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!-- Toggle Back to Simple -->
                                    <Button x:Name="HideAdvancedButton"
                                            Content="Â« Back to Simple"
                                            Click="HideAdvancedButton_Click"
                                            HorizontalAlignment="Center"
                                            Padding="12,6"
                                            Background="Transparent"
                                            Foreground="{StaticResource PrimaryBrush}"
                                            BorderBrush="{StaticResource PrimaryBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            FontSize="12"
                                            FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Quick Start Guide - Compact Expander -->
                        <controls:Expander 
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            ExpandDirection="Down"
                            IsExpanded="False">
                            <controls:Expander.Header>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE82F;" FontSize="16" Foreground="{StaticResource SuccessBrush}" />
                                    <TextBlock Text="Quick Start Guide" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937" />
                                </StackPanel>
                            </controls:Expander.Header>
                            <controls:Expander.Content>
                                <StackPanel Spacing="8" Margin="0,8,0,0">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border Background="{StaticResource SuccessBrush}" CornerRadius="12" Width="24" Height="24">
                                            <TextBlock Text="1" Foreground="White" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <TextBlock Text="Click 'Start' to begin monitoring" FontSize="13" Foreground="#374151" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border Background="{StaticResource SuccessBrush}" CornerRadius="12" Width="24" Height="24">
                                            <TextBlock Text="2" Foreground="White" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <TextBlock Text="Sit in your ideal posture" FontSize="13" Foreground="#374151" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border Background="{StaticResource SuccessBrush}" CornerRadius="12" Width="24" Height="24">
                                            <TextBlock Text="3" Foreground="White" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <TextBlock Text="Save as baseline reference" FontSize="13" Foreground="#374151" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border Background="{StaticResource SuccessBrush}" CornerRadius="12" Width="24" Height="24">
                                            <TextBlock Text="4" Foreground="White" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <TextBlock Text="Get notified when posture degrades" FontSize="13" Foreground="#374151" VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>
                            </controls:Expander.Content>
                        </controls:Expander>
                        
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Page.Content>
</Page>
