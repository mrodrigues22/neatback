<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="NeatBack.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NeatBack"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">
    <Page.Content>
        <ScrollViewer>
            <Grid Padding="20">
                <StackPanel
                    Spacing="20"
                    MaxWidth="500">
                    
                    <!-- Header -->
                    <TextBlock
                        Text="NeatBack - Posture Tracker"
                        FontSize="28"
                        FontWeight="Bold" />
                    
                    <!-- Control Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button
                            x:Name="StartButton"
                            Content="Start Monitoring"
                            Click="StartButton_Click"
                            MinWidth="150" />
                        
                        <Button
                            x:Name="SavePostureButton"
                            Content="Save Good Posture"
                            Click="SavePostureButton_Click"
                            IsEnabled="False"
                            MinWidth="150" />
                    </StackPanel>
                    
                    <!-- Webcam Preview -->
                    <Border
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <StackPanel Spacing="10">
                            <TextBlock
                                Text="Webcam Preview"
                                FontSize="18"
                                FontWeight="SemiBold" />
                            
                            <Border
                                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="300"
                                Background="Black">
                                <Image
                                    x:Name="CameraPreview"
                                    Stretch="Uniform" />
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status Section -->
                    <Border
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <StackPanel Spacing="10">
                            <TextBlock
                                Text="Status"
                                FontSize="18"
                                FontWeight="SemiBold" />
                            
                            <TextBlock
                                x:Name="StatusText"
                                Text="Not monitoring"
                                FontSize="16"
                                TextWrapping="Wrap" />
                            
                            <ProgressBar
                                x:Name="BadPostureProgress"
                                Maximum="30"
                                Value="0"
                                Visibility="Collapsed" />
                        </StackPanel>
                    </Border>
                    
                    <!-- Posture Metrics -->
                    <Border
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <StackPanel Spacing="10">
                            <TextBlock
                                Text="Posture Metrics"
                                FontSize="18"
                                FontWeight="SemiBold" />
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="5">
                                    <TextBlock Text="Head Pitch" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock x:Name="PitchText" Text="--Â°" FontSize="20" FontWeight="SemiBold" />
                                </StackPanel>
                                
                                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="5">
                                    <TextBlock Text="Distance" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock x:Name="DistanceText" Text="-- cm" FontSize="20" FontWeight="SemiBold" />
                                </StackPanel>
                                
                                <StackPanel Grid.Row="1" Grid.Column="0" Spacing="5" Margin="0,10,0,0">
                                    <TextBlock Text="Bad Duration" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock x:Name="BadDurationText" Text="0 s" FontSize="20" FontWeight="SemiBold" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Threshold Settings -->
                    <Border
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <StackPanel Spacing="10">
                            <TextBlock
                                Text="Threshold Settings"
                                FontSize="18"
                                FontWeight="SemiBold" />
                            
                            <StackPanel Spacing="5">
                                <TextBlock Text="Pitch Threshold (degrees)" />
                                <Slider
                                    x:Name="PitchThresholdSlider"
                                    Minimum="-30"
                                    Maximum="0"
                                    Value="-10"
                                    StepFrequency="1"
                                    TickFrequency="5"
                                    TickPlacement="BottomRight"
                                    ValueChanged="ThresholdSlider_ValueChanged" />
                                <TextBlock x:Name="PitchThresholdValue" Text="-10Â°" HorizontalAlignment="Right" />
                            </StackPanel>
                            
                            <StackPanel Spacing="5">
                                <TextBlock Text="Distance Threshold (cm)" />
                                <Slider
                                    x:Name="DistanceThresholdSlider"
                                    Minimum="5"
                                    Maximum="20"
                                    Value="10"
                                    StepFrequency="1"
                                    TickFrequency="5"
                                    TickPlacement="BottomRight"
                                    ValueChanged="ThresholdSlider_ValueChanged" />
                                <TextBlock x:Name="DistanceThresholdValue" Text="10 cm" HorizontalAlignment="Right" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Instructions -->
                    <Border
                        BorderBrush="{ThemeResource AccentControlElevationBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Background="{ThemeResource AccentFillColorDefaultBrush}">
                        <StackPanel Spacing="8">
                            <TextBlock
                                Text="ðŸ“ How to Use"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="White" />
                            <TextBlock
                                TextWrapping="Wrap"
                                Foreground="White"
                                Opacity="0.9">
                                <Run Text="1. Click 'Start Monitoring' to begin" />
                                <LineBreak />
                                <Run Text="2. Sit in your best posture" />
                                <LineBreak />
                                <Run Text="3. Click 'Save Good Posture' to set baseline" />
                                <LineBreak />
                                <Run Text="4. You'll be notified if posture gets bad" />
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Page.Content>
</Page>
